
﻿@{
    Layout = null;
}
@model UserLoginDto
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <style>
        body {
            background-color: pink; /* Arka plan rengi pembe */
            font-family: Arial, sans-serif;
        }

        .login-container {
            background-color: green; /* Formun arka plan rengi yeşil */
            max-width: 300px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.5);
        }

            .login-container h2 {
                color: white; /* Başlık rengi beyaz */
                text-align: center;
            }

        .form-group {
            margin: 10px 0;
        }

            .form-group label {
                color: white; /* Etiket rengi beyaz */
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 5px;
            }

                .form-group input[type="submit"] {
                    background-color: pink; /* Gönder düğmesi rengi pembe */
                    color: green; /* Gönder düğmesi metin rengi yeşil */
                    cursor: pointer;
                }

                    .form-group input[type="submit"]:hover {
                        background-color: lightpink; /* Gönder düğmesine fare üzeri geldiğinde rengi açık pembe */
                    }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>
        <form asp-controller="Auth" asp-action="Login"method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Login">
            </div>
           
        </form>
    </div>
</body>
